@model IEnumerable<Appointment>

<div class="d-flex flex-wrap mt-4 gap-3" style="width:100%">
	@foreach(Appointment app in Model)
	{
		<div class="appointmentCard p-2">
			<div class="h4 p-1" style="font-weight:700">
				@app.StartTime @(string.Compare(@app.StartTime, "12:00") < 0 ? "AM" : "PM")
				<i class="bi bi-clock"></i>
				<i class="bi bi-trash2-fill float-end h4 delete-appointment" style="color:red;cursor:pointer" data-appointment-id="@app.AppointmentId"></i>
			</div>
			<div class="d-flex align-items-center p-2">
				<img src=@app.Barber.ImageUrl style="width:105px;height:105px;border-radius:50%">
				<div class="d-inline-block ms-2" style="color:black;font-weight:600">
					Barber: <br>
					@app.Barber.FirstName @app.Barber.LastName
					<br>
					<b>Duration: @app.AppDuration min</b>
				</div>
			</div>
		</div>
	}
</div>