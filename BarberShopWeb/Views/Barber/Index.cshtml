@model IndexBarbersPaginationVM

<div class="container p-3">
    <div class="d-flex justify-content-between align-items-center p-3">
        <div class="d-flex gap-4 align-items-center">
            <h3 class="text-primary">Barbers</h3>
            <form class="d-flex" method="GET" asp-controller="Barber" asp-action="Index" asp-route-pageNumber="1" asp-route-search="@(Model.Search)">
                <input asp-for="Search" class="form-control me-sm-2" type="search" placeholder="Search by name...">
                <button class="btn btn-primary me-4 my-2 my-sm-0" style="margin-left:5px" type="submit">Search</button>
            </form>
        </div>
        <a asp-controller="Barber" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i>
            Add Barber
        </a>
    </div>
    <table class="table table-bordered table-striped align-middle">
        <thead>
            <tr>
                <th>
                    First name
                </th>
                <th>
                    Last name
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Barbers)
            {
                <tr style="font-weight:400;color:black">
                    <td>
                        @obj.FirstName
                    </td>
                    <td>
                        @obj.LastName
                    </td>
                    <td>
                        @obj.PhoneNumber
                    </td>
                    <td>
                        @obj.Status.ToString()
                    </td>
                    <td width="10%">
                        <a asp-controller="Barber" asp-action="Update" asp-route-id=@obj.BarberId class="btn btn-primary">
                            <i class="bi bi-pen"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="float-end p-3">
        <ul class="pagination pagination-lg">
            <li class="page-item">
                <a asp-controller="Barber" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage-1)" asp-route-search="@(Model.Search)" class="page-link @(Model.Prev == false ? "disabled-link" : "")" style="cursor:pointer;background-color:black;color:white">&laquo;</a>
            </li>
            <li class="page-item">
                <a asp-controller="Barber" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage+1)" asp-route-search="@(Model.Search)" class="page-link @(Model.Next == false ? "disabled-link" : "")" style="cursor:pointer;background-color:black;color:white">&raquo;</a>
            </li>
        </ul>
    </div>
</div>